%section.content.cf-account-settings.bg-grey
  .container

    .row
      .col-sm-offset-3.col-sm-6
        = render 'shared/flash'
        = render 'shared/settings/nav_tabs'

        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "cf-form", autocomplete: "off"}) do |f|

          .form-group
            = f.text_field :first_name, class: "form-control input-hg", placeholder: "First name"

          .form-group
            = f.text_field :last_name, class: "form-control input-hg", placeholder: "Last name"

          .form-group
            = f.email_field :email, class: "form-control input-hg", placeholder: "Email"

          .form-group
            = f.text_field :post_code, class: "form-control input-hg", placeholder: "Post code"

          .form-group
            = f.button "Save Changes", class: "btn btn-success btn-hg font-bold block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."}
